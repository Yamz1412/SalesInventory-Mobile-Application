    <style name="DashboardCard">
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">?android:colorBackground</item>
    </style>

    <style name="DashboardButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="iconTint">@android:color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@android:color/black</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeErrorColor">@color/status_failed</item>
        <item name="hintTextColor">?attr/colorOnBackground</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="backgroundTint">@color/lightGray</item>
        <item name="cornerRadius">12dp</item>
