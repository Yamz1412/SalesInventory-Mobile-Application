    <style name="AppTheme_Purple" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/purple_700</item>
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@color/purple_700</item>
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/accent_primary</item>
        <item name="colorSecondaryVariant">@color/accent_primary</item>
        <item name="colorAccent">@color/accent_primary</item>
        <item name="colorError">@color/status_failed</item>
        <item name="colorOnPrimary">@android:color/white</item>
