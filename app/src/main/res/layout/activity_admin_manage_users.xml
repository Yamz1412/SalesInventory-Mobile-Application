<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminManageRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    tools:context=".AdminManageUsersActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Users"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <ProgressBar
        android:id="@+id/progressBarManage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pending Staff Accounts"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvNoPending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No pending accounts"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_marginTop="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPendingUsers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="8dp"
        tools:itemCount="4"
        tools:listitem="@layout/item_pending_user" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Approved Staff (Promote)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="4dp"
        android:background="#EEEEEE"
        android:textColor="@color/black" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvManageUsers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:padding="8dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_manage_user"
        tools:itemCount="6" />

</LinearLayout>