<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@android:color/white">

    <!-- Name -->
    <TextView
        android:id="@+id/tvStaffName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Staff Name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <!-- Email -->
    <TextView
        android:id="@+id/tvStaffEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email@example.com"
        android:textColor="@color/gray"
        android:layout_marginTop="2dp"
        android:textSize="14sp" />

    <!-- Phone -->
    <TextView
        android:id="@+id/tvStaffPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+63 912 345 6789"
        android:textColor="@color/gray"
        android:layout_marginTop="2dp"
        android:textSize="14sp" />

    <!-- Optional: Role / status row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="left">

        <TextView
            android:id="@+id/tvStaffRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Staff"
            android:textColor="@color/black"
            android:textStyle="italic" />

        <!-- Optional: more actions later (edit, deactivate, etc.) -->
    </LinearLayout>

</LinearLayout>