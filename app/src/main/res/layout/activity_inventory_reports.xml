<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inventory Reports"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"
            android:layout_marginBottom="20dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° Stock Value Report"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View total inventory value, cost analysis, and profit margins by product"
                    android:textSize="13sp"
                    android:textColor="@color/textColorSecondary"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnStockValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Report"
                    android:textColor="@color/white"
                    style="@style/CustomButton" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Stock Movement Report"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Track stock received, sold, adjusted, and movement percentages"
                    android:textSize="13sp"
                    android:textColor="@color/textColorSecondary"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnStockMovement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Report"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorAccent"
                    style="@style/CustomButton" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¦ Receiving Report"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View purchase orders, received status, and total received amounts"
                    android:textSize="13sp"
                    android:textColor="@color/textColorSecondary"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnReceivingReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Report"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorPrimary"
                    style="@style/CustomButton" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”„ Adjustment Summary Report"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/successGreen"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Review all stock adjustments, reasons, and net changes per product"
                    android:textSize="13sp"
                    android:textColor="@color/textColorSecondary"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnAdjustmentSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Report"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/successGreen"
                    style="@style/CustomButton" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸšš Delivery Report"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View delivery orders, customers, payment type, and delivery status"
                    android:textSize="13sp"
                    android:textColor="@color/textColorSecondary"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnDeliveryReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Report"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorPrimary"
                    style="@style/CustomButton" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnExport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Export Reports"
            android:textColor="@color/white"
            android:backgroundTint="@color/warningYellow"
            style="@style/CustomButton"
            android:layout_marginTop="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    </LinearLayout>
</ScrollView>