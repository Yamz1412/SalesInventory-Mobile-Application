<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvMovementProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/textColorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvMovementChange"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:text="+0"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tvMovementBefore"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Before: 0"
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/tvMovementAfter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="After: 0"
                android:textColor="@color/textColorSecondary" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMovementType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type"
            android:layout_marginTop="6dp"
            android:textColor="@color/textColorSecondary" />

        <TextView
            android:id="@+id/tvMovementReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reason"
            android:layout_marginTop="2dp"
            android:textColor="@color/textColorSecondary" />

        <TextView
            android:id="@+id/tvMovementRemarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remarks"
            android:layout_marginTop="2dp"
            android:textColor="@color/textColorSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvMovementDate"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:text="2025-12-08 12:00"
                android:textColor="@color/textColorSecondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvMovementUser"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="user@example.com"
                android:textAlignment="viewEnd"
                android:textColor="@color/textColorSecondary"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>