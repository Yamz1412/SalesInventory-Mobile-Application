<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="?android:colorBackground"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reports &amp; Analytics"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground"
        android:gravity="center"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="4dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL SALES"
                android:gravity="center"
                android:textColor="#FF9800"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/TotalSalesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FF9800"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="4dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL PRODUCTS"
                android:gravity="center"
                android:textColor="#2E7D32"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/totalProductsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="4dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOW STOCK"
                android:textColor="@color/red"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lowStockTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/errorRed"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="4dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL REVENUE"
                android:gravity="center_horizontal"
                android:textColor="#4CAF50"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/totalRevenueTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BtnSalesReport"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Sales Journal (SJE)"
            style="@style/CustomButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BtnInventoryReport"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Inventory"
            android:layout_marginStart="8dp"
            style="@style/CustomButton" />
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/BtnComprehensiveReports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“Š Comprehensive Reports (CSV)"
        android:layout_marginTop="1dp"
        android:textStyle="bold"
        style="@style/CustomButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/BtnOverallPdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“ Overall Summary PDF"
        android:layout_marginTop="1dp"
        android:textStyle="bold"
        style="@style/CustomButtonOutlined" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/BtnInventoryMovements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inventory Movements"
        android:layout_marginTop="0dp"
        style="@style/CustomButtonOutlined" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#DDD"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="Item / Date"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Qty / Count"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textAlignment="viewEnd"
            android:textStyle="bold"/>
    </LinearLayout>

    <ListView
        android:id="@+id/ReportsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_report_row"
        android:dividerHeight="1dp"/>

</LinearLayout>