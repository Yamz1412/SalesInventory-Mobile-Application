<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:colorBackground"
    tools:context=".AdminStaffList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvStaffListTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Staff Accounts"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground" />

        <Button
            android:id="@+id/btnCreateStaff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Staff"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarStaffList"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvNoStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No staff accounts found"
        android:textSize="14sp"
        android:textColor="?attr/colorOnBackground"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStaffAccounts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="8dp"
        tools:listitem="@layout/item_staff_account"
        tools:itemCount="8" />

    <Button
        android:id="@+id/btnEditStaffAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Account"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/white" />

</LinearLayout>