<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/welcomeT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/syncStatusTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Syncing..."
                android:textSize="12sp"
                android:textColor="@color/orange"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <Button
            android:id="@+id/LogoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_logout"
            android:textColor="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Products"
                android:textSize="12sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/TotalCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Critical Stock"
                android:textSize="12sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/CriticalCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2">

        <Button
            android:id="@+id/SellesBtn"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:text="Sales / POS"
            android:onClick="OpenSell"
            android:backgroundTint="#FFFFFF"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/StockBtn"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:text="Inventory"
            android:onClick="OpenStock"
            android:backgroundTint="#FFFFFF"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/PruchaseBtn"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:text="Add Product"
            android:onClick="OpenAdd"
            android:backgroundTint="#FFFFFF"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/HistoryBtn"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:text="Reports"
            android:onClick="OpenHistory"
            android:backgroundTint="#FFFFFF"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/ProfilBtn"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:text="Profile"
            android:onClick="OpenProfil"
            android:backgroundTint="#FFFFFF"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/DeleteBtn"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:text="Trash / Delete"
            android:onClick="OpenDelete"
            android:backgroundTint="#FFFFFF"
            android:textColor="#D32F2F" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:src="@drawable/ic_settings"
            android:text="Settings"
            android:onClick="OpenDelete"
            android:backgroundTint="#FFFFFF"
            android:textColor="#D32F2F" />

    </GridLayout>
</LinearLayout>