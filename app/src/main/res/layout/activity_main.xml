<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorBackground"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- HEADER SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnBackground" />

                    <TextView
                        android:id="@+id/tv_last_updated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_updated"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <!-- HEADER BUTTONS -->
                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <ImageButton
                        android:id="@+id/btn_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:padding="6dp"
                        android:src="@drawable/ic_notifications"
                        app:tint="@color/text_secondary"
                        android:contentDescription="notifications"
                        android:onClick="onNotificationsClicked"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tv_notification_badge"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="end|top"
                        android:translationX="-3dp"
                        android:translationY="2dp"
                        android:visibility="visible"
                        android:gravity="center"
                        android:textSize="7sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_notification_badge" />

                </FrameLayout>

                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:padding="6dp"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/text_secondary"
                    android:scaleType="centerInside"
                    android:contentDescription="settings" />

                <ImageButton
                    android:id="@+id/btn_profile"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:padding="6dp"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/text_secondary"
                    android:scaleType="centerInside"
                    android:contentDescription="profile" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminate="true" />

            <!-- QUICK OVERVIEW SECTION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_overview"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp" />

            <!-- ROW 1: Today's Sales, Inventory Value, Low Stock -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:baselineAligned="false">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_total_sales"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="6dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_sales"
                                app:tint="@color/accent_primary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Today Sales"
                                android:textSize="11sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginStart="6dp"
                                android:lines="1"
                                android:ellipsize="end" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_total_sales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₱0.00"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/accent_primary" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_inventory_value"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="6dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_inventory"
                                app:tint="@color/success_primary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Inventory"
                                android:textSize="11sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginStart="6dp"
                                android:lines="1"
                                android:ellipsize="end" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_inventory_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₱0.00"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/success_primary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_low_stock"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/warning_primary"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="6dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_warning"
                                app:tint="@android:color/holo_red_dark" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Low Stock"
                                android:textSize="11sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginStart="6dp"
                                android:lines="1"
                                android:ellipsize="end" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_low_stock_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- ROW 2: Pending Orders, Revenue, Near Expiry -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:baselineAligned="false">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_pending_orders"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="6dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_orders"
                                app:tint="@color/info_primary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Pending PO"
                                android:textSize="11sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginStart="6dp"
                                android:lines="1"
                                android:ellipsize="end" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_pending_orders_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/info_primary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_revenue"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="6dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_pesos"
                                app:tint="@color/primary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Month Revenue"
                                android:textSize="11sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginStart="6dp"
                                android:lines="1"
                                android:ellipsize="end" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_revenue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₱0.00"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_near_expiry"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="6dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_warning"
                                app:tint="@color/warning_primary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Near Expiry"
                                android:textSize="11sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginStart="6dp"
                                android:lines="1"
                                android:ellipsize="end" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_near_expiry_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/warning_primary" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- QUICK ACTIONS SECTION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_actions"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10dp" />

            <GridLayout
                android:id="@+id/quick_actions_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="false"
                android:columnOrderPreserved="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_create_sale"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="90dp"
                    android:text="Create Sale"
                    app:icon="@drawable/ic_add_sale"
                    style="@style/DashboardButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_inventory"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="90dp"
                    android:text="Inventory"
                    app:icon="@drawable/ic_inventory"
                    style="@style/DashboardButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_reports"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="90dp"
                    android:text="Reports"
                    app:icon="@drawable/ic_reports"
                    style="@style/DashboardButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_product"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="90dp"
                    android:text="Add Product"
                    app:icon="@drawable/ic_add_product"
                    style="@style/DashboardButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_create_po"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="90dp"
                    android:text="Create P.O"
                    app:icon="@drawable/ic_purchase_order"
                    style="@style/DashboardButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_customers"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="90dp"
                    android:text="Categories"
                    app:icon="@drawable/ic_category"
                    style="@style/DashboardButton" />

            </GridLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_manage_users"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Manage Users"
                android:textSize="13sp"
                style="@style/CustomButtonOutlined" />

            <!-- ANALYTICS SECTION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/analytics"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="?android:colorBackground"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sales Trend (7 Days)"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnBackground" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_sales_trend"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="6dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="?android:colorBackground"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top 5 Products"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnBackground" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart_top_products"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="6dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="?android:colorBackground"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inventory Status"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnBackground" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chart_inventory_status"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="6dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- RECENT ACTIVITY SECTION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_activity"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="?android:colorBackground"
                app:cardElevation="3dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recent_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_recent_activity"
                    tools:itemCount="3"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>