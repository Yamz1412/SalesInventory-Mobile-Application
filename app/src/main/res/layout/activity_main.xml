<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/header_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back,"
                android:textColor="#B2DFDB"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/welcomeT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            android:scaleType="centerInside"
            android:src="@drawable/ic_settings"
            app:tint="@color/white" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="#FFEBEE">
                        <TextView
                            android:id="@+id/CriticalCountTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#D32F2F" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Critical Items"
                            android:textColor="#D32F2F" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    android:layout_marginStart="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="#E8F5E9">
                        <TextView
                            android:id="@+id/TotalCountTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#388E3C" />
                        <TextView
                            android:id="@+id/TotalCountTVLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Inventory"
                            android:textColor="#388E3C" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="10dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="4">

                <Button
                    android:id="@+id/SellesBtn"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:text="SALES / POS"
                    android:textSize="16sp"
                    android:onClick="OpenSell"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="@color/colorPrimary"
                    android:elevation="4dp" />

                <Button
                    android:id="@+id/StockBtn"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:text="INVENTORY"
                    android:textSize="16sp"
                    android:onClick="OpenStock"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="@color/colorPrimary"
                    android:elevation="4dp" />
s
                <Button
                    android:id="@+id/PruchaseBtn"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:text="ADD PRODUCT"
                    android:textSize="16sp"
                    android:onClick="OpenAdd"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="@color/colorPrimary"
                    android:elevation="4dp" />

                <Button
                    android:id="@+id/HistoryBtn"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:text="REPORTS (SJE)"
                    android:textSize="16sp"
                    android:onClick="OpenHistory"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="@color/colorPrimary"
                    android:elevation="4dp" />

                <Button
                    android:id="@+id/ProfilBtn"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:text="PROFILE"
                    android:textSize="16sp"
                    android:onClick="OpenProfil"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="@color/colorPrimary"
                    android:elevation="4dp" />

                <Button
                    android:id="@+id/DeleteBtn"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:text="TRASH / DELETE"
                    android:textSize="16sp"
                    android:onClick="OpenDelete"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#D32F2F"
                    android:elevation="4dp" />

            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnAdminManage"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:text="Manage Users"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <Button
                android:id="@+id/LogoutBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="LOGOUT"
                android:onClick="LogOut"
                android:backgroundTint="#FF5252" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>